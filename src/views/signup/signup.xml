<Page navigatingTo="navigatingTo">
	<GridLayout>
		<StackLayout orientation="vertical">
			<Image src="~/images/3.png" class="squarePic"/>
			<TextField text="{{ email }}" hint="Email address" keyboardType="email" />
			<TextField text="{{ password }}" secure="true" hint="Password" />
			<Button text="Sign up" tap="{{ signUp }}" />
		</StackLayout>
	<ActivityIndicator busy="{{ loadingCounter.isLoading }}" />
	</GridLayout>
</Page>