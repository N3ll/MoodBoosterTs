<Page navigatedTo="navigatedTo">
	<GridLayout columns="*,*" rows="auto,auto,*,auto">
		<Label text="{{ currentQuestionIndex + 1 + ' of ' + questions.length }}" row="0" colSpan="2" horizontalAlignment="center" />
		<Progress value="{{ progress }}" maxValue="5" row="1" colSpan="2" />

		<ScrollView id="scroll" row="2" colSpan="2" visibility="{{ visibleQ1 }}">
			<GridLayout rows="auto,auto,*,auto" cols="*,*" bindingContext="{{ currentQuestion }}">
				<Image src="~/images/1.png" width="150" height="118" row="0" colSpan="2" horizontalAlignment="center" verticalAlignment="bottom" marginTop="0" marginBottom="0" />
				<Label text="{{ question }}" textWrap="true" row="1" colSpan="2" verticalAlignment="bottom" horizontalAlignment="left" marginRight="20" marginLeft="20" marginBottom="20" />

				<Image id="cup" src="~/images/f1.png" width="200" height="200" row="2" col="1" marginTop="0" marginBottom="0" />
				<Image id="coffee" src="~/images/coffee.png" width="200" height="200" row="2" col="1" marginTop="0" marginBottom="0" />
				<Slider id="slider" row="2" col="0" value="{{ choseAnswer }}" maxValue="{{ answers ? answers.length-1 : 0 }}" rotate="-90" width="150" horizontalAlignment="left" verticalAlignment="center" />

				<Label text="{{ answers[roundedProperty].answer }}" row="3" colSpan="2" textWrap="true" />
			</GridLayout>
		</ScrollView>

		<ScrollView id="scroll" row="2" colSpan="2" visibility="{{ visibleQ2 }}">
			<GridLayout rows="auto,auto,*" cols="*,*" bindingContext="{{ currentQuestion }}">
				<Image src="~/images/1.png" width="150" height="118" row="0" colSpan="2" horizontalAlignment="center" verticalAlignment="bottom" marginTop="0" marginBottom="0" />
				<Label text="{{ question }}" textWrap="true" row="1" colSpan="2" verticalAlignment="bottom" horizontalAlignment="left" marginRight="20" marginLeft="20" marginBottom="20" />

				<ListPicker items="{{listPickerItems}}" row="2" colSpan="2" />
			</GridLayout>
		</ScrollView>

		<ScrollView id="scroll" row="2" colSpan="2" visibility="{{ visibleQ3 }}">
			<StackLayout orinetation="vertical" bindingContext="{{ currentQuestion }}">
				<Label text="{{ question }}" textWrap="true" verticalAlignment="bottom" horizontalAlignment="left" marginRight="20" marginLeft="20" marginBottom="20" />
				<Repeater items="{{ answers }}">
					<Repeater.itemsLayout>
						<WrapLayout itemWidth="160" />
					</Repeater.itemsLayout>
					<Repeater.itemTemplate>
						<Label text="{{ answer }}" textWrap="true"/>
					</Repeater.itemTemplate>
				</Repeater>
			</StackLayout>
		</ScrollView>

		<ScrollView id="scroll" row="2" colSpan="2" visibility="{{ visibleQ4 }}">

		</ScrollView>

		<!--Switch and dialogs -->
		<ScrollView id="scroll" row="2" colSpan="2" visibility="{{ visibleQ5 }}">
			<Switch checked="{{ someProperty }}" />
		</ScrollView>


		<Button col="0" row="3" verticalAlignment="bottom" horizontalAlignment="center" text="Previous" tap="{{ previousTap }}" visibility="{{ canGoToPrevious | visibilityConverter }}" />
		<Button col="1" row="3" verticalAlignment="bottom" horizontalAlignment="center" text="Next" tap="{{ nextTap }}" visibility="{{ canGoToNext | visibilityConverter }}" />

		<ActivityIndicator busy="{{ util.isLoading }}" style="width=100 height = 100" colSpan="2" rowSpan="4" />
	</GridLayout>
</Page>